<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.settings.AddressAddFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/back_arrow"
            android:layout_gravity="start"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:layout_marginStart="25dp"
            android:layout_gravity="start"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Toolbar1"
        app:layout_constraintStart_toStartOf="parent">


            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/GeneralNotification"
                style="@style/SwitchbButton"
                android:checked="true"
                android:text="General Notification"
                 />



            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/sound"
               style="@style/SwitchbButton"
                android:checked="true"
                android:text="Sound" />



            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/Vibrate"
                style="@style/SwitchbButton"
                android:checked="false"
                android:text="Vibrate" />



            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/SpecialOffer"
                style="@style/SwitchbButton"
                android:checked="true"
                android:text="Special Offer's" />



            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/promo"
                style="@style/SwitchbButton"
                android:checked="false"
                android:text="Promo &amp; Discount" />



            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/payment"
               style="@style/SwitchbButton"
                android:checked="true"
                android:text="Payments" />



            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/cashback"
                style="@style/SwitchbButton"
                android:checked="false"
                android:text="Cashback" />



            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/updates"
                style="@style/SwitchbButton"
                android:checked="true"
                android:text="App Updates" />


            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/newservice"
                style="@style/SwitchbButton"
                android:checked="false"
                android:text="New Service Available" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>