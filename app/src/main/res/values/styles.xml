<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    EditTextLayout Style-->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Disable animation for the hint -->
        <item name="hintAnimationEnabled">false</item>
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="helperTextTextColor">@color/red</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:drawableTint">@drawable/icon_tint</item>
    </style>

    <style name="custom_chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="chipStrokeColor">@color/black</item>
    </style>

    <style name="custom_tab_layout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ElevatedButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">5dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">@drawable/ripple_bg_grey</item>

    </style>
    
    <style name="SwitchbButton" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>


    </style>
    
    <style name="profileText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableEnd">@drawable/forward</item>

    </style>

    <style name="profileImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>

    </style>

    <style name="search_view" parent="Widget.Material3.SearchBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">Search location here</item>
    </style>

</resources>