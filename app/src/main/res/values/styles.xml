<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoAnimationTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Disable animation for the hint -->
        <item name="hintAnimationEnabled">false</item>
        <!-- Set the hint text color to transparent when not focused -->
        <item name="android:textColorHint">@color/grey_500</item>
    </style>

    <style name="custom_chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="chipStrokeColor">@color/black</item>
    </style>

    <style name="custom_tab_layout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>